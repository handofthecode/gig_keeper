<!doctype html>
<html lang="en-US">
  <head>
    <title>Gig Log</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="stylesheets/giglog.css">
  </head>
  <body>
    <header>

     <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>

      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <div>
        <a href="/"><h1>Gig Log</h1></a>
        <% unless @past_income.nil? %>
          <p id='income'>Total Money Earned: <%= @past_income %> </p>
        <% end %>
        <% unless @future_income.nil? %>
          <p id='income'>Incoming Money: <%= @future_income %> </p>
        <% end %>
      </div>

    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>